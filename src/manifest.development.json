{
    "manifest_version": 2,
    "name": "chrome-ext",
    "description": "chrome extension",
    "version": "0.0.1",
    "options_page": "options.html",
    "browser_action": {
    },
    "background": {
        "scripts":["js/background.js","js/enum.js" ]
    },
    "permissions": [
        "https://*.mabangerp.com/*",
        "http://*.1688.com/",
        "http://*.alibaba.com/",
        "https://*.taobao.com/",
        "https://*.taobao.global/",
        "http://*.taobao.com/",
        "http://*/",
        "https://*/",   // 设置 所有的http 都可以进行请求
        "contextMenus", // 右键菜单
		"tabs", // 标签
        "webRequest", // web请求
		"webRequestBlocking" // 阻塞式web请求
    ],
    "content_scripts":[
        {
        "matches": [
            "https://www.mabangerp.com/*",
            "https://www.baidu.com/*",
            "https://buyertrade.taobao.com/trade/itemlist/*",
            "https://buyertrade.taobao.com/trade/itemlist/list_bought_items.htm?*",
            "http://yangkeduo.com/orders.html?*",
            "http://yangkeduo.com/proxy/api/api/aristotle/order_list_v3?*",
            "http://yangkeduo.com/transac_orders_search_results.html?*"
        ],
        "js": [ 
            "js/jquery-1.8.3.js",
            "js/content.js",
            "js/enum.js"
        ],
        "run_at": "document_end",
        "all_frames": true
        }
    ],
    "web_accessible_resources": [
        "main.html",
        "main.js"
      ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}